{
  "name": "microblog",
  "version": "0.5.3",
  "description": "Render a microblog from Github issues.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build index.js --license licenses.txt --target es2018",
    "test": "NODE_OPTIONS=\"-r dotenv/config\" jest",
    "test:watch": "npm run test -- --watchAll --selectProjects test",
    "serve": "serve -l 8080 -n",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore .",
    "fmt:write": "npm run fmt -- --write",
    "fmt:check": "npm run fmt -- --check"
  },
  "engines": {
    "node": "^16"
  },
  "keywords": [
    "microblog",
    "github",
    "action"
  ],
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "jest": {
    "projects": [
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      },
      {
        "displayName": "test",
        "setupFiles": [
          "<rootDir>/lib/__integration__/helpers/setup.js"
        ],
        "globalTeardown": "<rootDir>/lib/__integration__/helpers/teardown.js",
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules>",
          "fixtures/.+",
          "helpers/.+"
        ],
        "testEnvironment": "jsdom",
        "clearMocks": true
      }
    ]
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "package-lock.json",
        "type": "json"
      },
      {
        "filename": "README.md",
        "updater": "lib/helpers/update-readme.js"
      }
    ]
  },
  "devDependencies": {
    "@octokit/rest": "18.12.0",
    "@testing-library/dom": "8.12.0",
    "@vercel/ncc": "0.33.3",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-runner-eslint": "1.0.0",
    "prettier": "2.6.2",
    "serve": "13.0.2",
    "standard-version": "9.3.2"
  },
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/github": "5.0.0",
    "cpy": "8.1.2",
    "date-fns": "2.26.0",
    "dotenv": "12.0.3",
    "globby": "11.0.4",
    "js-yaml": "4.1.0",
    "nunjucks": "3.2.3",
    "remark": "13.0.0",
    "remark-frontmatter": "3.0.0",
    "remark-gemoji": "6.0.0",
    "remark-gfm": "1.0.0",
    "remark-html": "13.0.2",
    "remark-parse": "9.0.0",
    "slugify": "1.6.5"
  }
}
