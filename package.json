{
  "name": "microblog",
  "version": "0.1.0-pre.1",
  "description": "Render a microblog from Github issues.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build index.js --license licenses.txt --target es2018",
    "test": "NODE_OPTIONS=\"-r dotenv/config\" jest",
    "test:watch": "npm run test -- --watchAll --selectProjects test",
    "serve": "serve -l 8080 -n _site"
  },
  "engines": {
    "node": "^12"
  },
  "keywords": [
    "microblog",
    "github",
    "action"
  ],
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "jest": {
    "projects": [
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      },
      {
        "displayName": "test"
      }
    ]
  },
  "devDependencies": {
    "@octokit/rest": "18.0.12",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "jest-runner-eslint": "0.10.0",
    "prettier": "2.2.1",
    "serve": "11.3.2"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/github": "4.0.0",
    "cpy": "8.1.1",
    "date-fns": "2.16.1",
    "dotenv": "8.2.0",
    "globby": "11.0.2",
    "js-yaml": "4.0.0",
    "nunjucks": "3.2.2",
    "remark": "13.0.0",
    "remark-frontmatter": "3.0.0",
    "remark-gemoji": "6.0.0",
    "remark-gfm": "1.0.0",
    "remark-html": "13.0.1",
    "remark-parse": "9.0.0"
  }
}
